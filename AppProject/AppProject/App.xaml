<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppProject.App">
    <Application.Resources>
        <ResourceDictionary>
            <!--Style for calculator buttons-->
            <Style x:Key="calcButton" TargetType="Button">
                <Setter Property="WidthRequest" Value="60"/>
                <Setter Property="HeightRequest" Value="60"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="FontSize" Value="30"/>
            </Style>
            <!--Style for flashlight buttons-->
            <Style x:Key="flashButton" TargetType="Button">
                <Setter Property="WidthRequest" Value="150"/>
                <Setter Property="HeightRequest" Value="150"/>
                <Setter Property="BorderRadius" Value="20"/>
            </Style>

            <Style x:Key="timerButton" TargetType="Button">
                <Setter Property="HeightRequest" Value="100"/>
                <Setter Property="WidthRequest" Value="120"/>
                <Setter Property="BorderRadius" Value="10"/>
                <Setter Property="BackgroundColor" Value="#5b687c"/>
                <Setter Property="TextColor" Value="White"/>
            </Style>
        </ResourceDictionary>

    </Application.Resources>
</Application>